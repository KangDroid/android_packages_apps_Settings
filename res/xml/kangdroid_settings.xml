<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/kangdroid_settings"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <PreferenceCategory
       android:key="status_bar_category"
       android:title="@string/status_bar_title" >

    <!-- Status Bar -->
    <PreferenceScreen
        android:key="status_bar_settings"
        android:fragment="com.android.settings.cyanogenmod.StatusBarSettings"
        android:title="@string/status_bar_title" />
		
    </PreferenceCategory>
	
    <PreferenceCategory
       android:key="lockscreen_settings"
       android:title="@string/lockscreen_settings_title" >
	
    <!-- Lock Settings -->
     <PreferenceScreen
         android:key="lock_settings"
         android:title="@string/rr_lockscreen_title"
         android:fragment="com.android.settings.rr.LockSettings" />  
	
	</PreferenceCategory>
	
    <PreferenceCategory
       android:key="quick_settings_category"
       android:title="@string/quick_settings_title" >

    <!-- Notification Drawer -->
    <PreferenceScreen
        android:key="notification_drawer"
        android:fragment="com.android.settings.cyanogenmod.NotificationDrawerSettings"
        android:title="@string/quick_settings_title" />
		
    </PreferenceCategory>
	
    <PreferenceCategory
        android:key="animation_settings"
        android:title="@string/kangdroid_anim_settings_titlee" >
		
	<!-- KangDroid Animation Settings -->
    <PreferenceScreen
        android:key="anim_settings"
        android:fragment="com.android.settings.kangdroid.AnimationSettings"
        android:title="@string/kangdroid_anim_settings_title" />
		
	</PreferenceCategory>
	
	<!-- Navagation Bar -->
    <PreferenceCategory
        android:key="navigation_bar_category"
        android:title="@string/navigation_customization_title" >

	</PreferenceCategory>
	
    <PreferenceCategory
        android:key="kangdroid_recents"
        android:title="@string/kangdroid_recetns_category_title" >
		
	<PreferenceScreen
		android:key="kangdroid_recent_activity"
		android:title="@string/omniswitch_settings_title"
		android:fragment="com.android.settings.kangdroid.RecentsActivitySettings" />
		
	</PreferenceCategory>
	
    <PreferenceCategory
        android:key="misc_settings"
        android:title="@string/misc_settings_title" >
	
        <!-- Screen Recorder -->
        <PreferenceScreen
            android:key="screen_recorder"
            android:title="@string/screen_recorder_title"
            android:fragment="com.android.settings.temasek.ScreenRecorderSettings" />
		
    <!-- Gesture anywhere -->
    <PreferenceScreen
        android:key="gesture_anywhere"
        android:fragment="com.android.settings.crdroid.gestureanywhere.GestureAnywhereSettings"
        android:title="@string/gesture_anywhere_title" />
		
    <!-- Wakelock blocker -->
    <PreferenceScreen
        android:key="wakelock_blocker"
        android:fragment="com.android.settings.crdroid.WakeLockBlocker"
        android:title="@string/wakelock_blocker_title" />
	
	<!-- Host File Manager Settings: Advertisement Blocker --> 
	<PreferenceScreen
        android:key="hfm_settings"
        android:title="@string/hfm_pref_screen_title"
        android:fragment="com.android.settings.screwd.hfm.HfmSettings" />   

	</PreferenceCategory>

</PreferenceScreen>
