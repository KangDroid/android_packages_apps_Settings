<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">
	
	<PreferenceCategory
		android:key="kdp_status_bar_category"
		android:title="@string/kdp_status_bar_category_title">
		
	<PreferenceScreen
		android:key="kdp_status_bar_pref"
		android:title="@string/kdp_status_bar_title"
		android:fragment="com.android.settings.kangdroid.KangDroidStatusBarSettings" />
		
	<PreferenceScreen
		android:key="qs_colors"
		android:title="@string/qs_colors_title"
		android:fragment="com.android.settings.kangdroid.QSColors" />
		
	</PreferenceCategory>
	
    <PreferenceCategory
        android:key="quick_settings_category"
        android:title="@string/quick_settings_category_title" >

    <PreferenceScreen
        android:key="qs_order"
        android:title="@string/qs_order_title"
        android:fragment="com.android.settings.cyanogenmod.qs.QSTiles" />

        <com.android.settings.cyanogenmod.SecureSettingSwitchPreference
            android:key="sysui_qs_main_tiles"
            android:title="@string/qs_main_tiles_title"
            android:summaryOn="@string/qs_main_tiles_summary_on"
            android:summaryOff="@string/qs_main_tiles_summary_off"
            android:defaultValue="true" />

    </PreferenceCategory>
	
	<PreferenceCategory
		android:key="kdp_recents_category"
		android:title="@string/kdp_ui_recents">
	
	<PreferenceScreen
		android:key="kdp_recents"
		android:title="@string/kdp_ui_recents"
		android:fragment="com.android.settings.kangdroid.RecentsActivitySettings" />
		
	</PreferenceCategory>
	
	<PreferenceCategory
		android:key="misc_settings"
		android:title="@string/misc_settings_title">
		
        <PreferenceScreen
            android:key="power_menu"
            android:title="@string/power_menu_title"
            android:fragment="com.android.settings.cyanogenmod.PowerMenuActions" />
		
    <!-- App sidebar -->
    <PreferenceScreen
         android:key="app_sidebar"
         android:fragment="com.android.settings.kangdroid.KangDroidAppSideBar"
         android:title="@string/app_sidebar_title"/>
		 
	 </PreferenceCategory>
</PreferenceScreen>